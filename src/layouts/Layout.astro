---
import hashes from './csp-hashes.json';

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Hacret - No-Code AI Chatbots" />
		<meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/pi/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <meta http-equiv="Content-Security-Policy" content="
      default-src 'self';
      script-src 'self' https://cdnjs.cloudflare.com 'unsafe-inline' 'unsafe-eval';
      style-src 'self' https://cdnjs.cloudflare.com https://fonts.googleapis.com 'unsafe-inline';
      img-src 'self' data: blob: https:;
      connect-src 'self' blob: data: https:;
      font-src 'self' https://fonts.gstatic.com;
      media-src 'self' blob:;
      object-src 'none';
      base-uri 'self';
      form-action 'self';
      block-all-mixed-content;
      upgrade-insecure-requests;"
    >
    
    <meta http-equiv="Strict-Transport-Security" content="max-age=31536000; includeSubDomains; preload">
    <meta http-equiv="X-Content-Type-Options" content="nosniff">
    <meta http-equiv="X-XSS-Protection" content="1; mode=block">
    <meta name="referrer" content="no-referrer-when-downgrade">
    <meta http-equiv="Permissions-Policy" content="geolocation=(self), microphone=()">
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
  :root {
    --background-color: #0a0a15; 
    --text-color: #e0e0ff; 
    --accent: 100, 255, 218; 
    --accent-light: 144, 255, 231;
    --accent-dark: 0, 200, 180;
    --accent-gradient: linear-gradient(
      135deg,
      rgba(var(--accent), 0.8),
      rgba(var(--accent-light), 0.5) 50%,
      rgba(255, 255, 255, 0.1) 100%
    );
    --primary: rgb(var(--accent)); 
    --primary-dark: rgb(var(--accent-dark));
    --secondary: rgb(var(--accent-light));
    --pi-symbol: "Ï€"; 
  }

  html {
    font-family: 'Inter', 'Roboto Mono', monospace, sans-serif;
    background: var(--background-color);
    color: var(--text-color);
    line-height: 1.6;
  }

  .pi-symbol {
    font-family: 'Times New Roman', serif;
    font-weight: bold;
    color: var(--primary);
    text-shadow: 0 0 8px rgba(var(--accent), 0.7);
  }

  code, pre {
    font-family: 'Roboto Mono', monospace;
    background: rgba(0, 20, 30, 0.5);
    color: var(--primary);
    padding: 0.3em 0.6em;
    border-radius: 4px;
    border: 1px solid rgba(var(--accent), 0.3);
  }

  a {
    color: var(--primary);
    text-decoration: none;
    transition: all 0.3s ease;
  }

  a:hover {
    color: var(--secondary);
    text-shadow: 0 0 10px rgba(var(--accent), 0.5);
  }

  .btn {
    display: inline-block;
    padding: 10px 24px;
    border-radius: 6px;
    font-weight: 600;
    font-family: 'Roboto Mono', monospace;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .btn-primary {
    background-color: var(--primary);
    color: var(--background-color);
    border: 2px solid transparent;
    box-shadow: 0 0 15px rgba(var(--accent), 0.4);
  }

  .btn-primary:hover {
    background-color: var(--primary-dark);
    transform: translateY(-2px);
    box-shadow: 0 0 20px rgba(var(--accent), 0.7);
  }

  .btn-outline {
    border: 2px solid var(--primary);
    color: var(--primary);
    background: transparent;
    box-shadow: 0 0 10px rgba(var(--accent), 0.3);
  }

  .btn-outline:hover {
    background: rgba(var(--accent), 0.1);
    box-shadow: 0 0 20px rgba(var(--accent), 0.5);
  }

  .gradient-bg {
    background: linear-gradient(
      145deg,
      rgba(10, 15, 25, 0.7),
      rgba(20, 30, 50, 0.5)
   );
    backdrop-filter: blur(8px);
    border-radius: 12px;
    border: 1px solid rgba(var(--accent), 0.2);
    padding: 24px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
  }

  .pi-digits {
    font-family: 'Roboto Mono', monospace;
    font-size: 1.2rem;
    letter-spacing: 2px;
    color: var(--primary);
    margin: 1em 0;
  }

  @media (max-width: 768px) {
    html {
      font-size: 92%;
    }
    .gradient-bg {
      padding: 16px;
    }
  }
</style>
